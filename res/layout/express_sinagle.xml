<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_groad"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@color/white"
                android:paddingLeft="10dip" >

                <TextView
                    android:id="@+id/express_detail_date"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="2013-6-3 23:20"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_text_size" />

                <LinearLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="16dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/express_detail_date"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="16dip"
                        android:layout_height="20dip"
                        android:src="@drawable/bill_flow_line_active" />

                    <RelativeLayout
                        android:id="@+id/imageView1533"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/bill_flow_point_active" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="16dip"
                        android:layout_height="20dip"
                        android:src="@drawable/bill_flow_line_active" />
                </LinearLayout>

                <TextView
                    android:id="@+id/express_detail_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/relativeLayout1"
                    android:paddingLeft="5dip"
                    android:text="快件已经抵达郑州市新郑龙湖"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>